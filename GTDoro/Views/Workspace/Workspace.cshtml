@model GTDoro.Models.Workspace
@using GTDoro.Models;
@using GTDoro.ExtensionMethods;
@{
    Layout = "~/Views/Shared/Layouts/_WorkspaceLayout.cshtml";
}

<div class="nav-tabs-custom">
    <ul class="nav nav-tabs">
        <li class="active">
            <a href="#tab-create" data-toggle="tab">
                <i class="fa fa-fw @(Operation.CreateProject.GetAttributeIconCssClass())"></i> @(Operation.CreateProject.GetAttributeDisplayName())
            </a>
        </li>
    </ul>
    <div class="tab-content">
        <div class="tab-pane active" id="tab-create">
            <div class="box box-danger">
                <div class="box-header">
                    <div class="box-title"><i class="fa fa-fw @(Operation.CreateProject.GetAttributeIconCssClass())"></i> @(Operation.CreateProject.GetAttributeDisplayName())</div>
                </div><!-- /.box-header -->
                <div id="form-create" class="box-body no-padding">
                    @Html.Partial("CreateProject")
                </div><!-- /.box-body -->
            </div><!-- /.box -->
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}