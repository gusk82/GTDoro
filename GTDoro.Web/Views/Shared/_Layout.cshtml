<body class="skin-blue">
    <!-- header logo: style can be found in header.less -->
    <header class="header">
        @Html.Partial("_Logo")
        <!-- Header Navbar: style can be found in header.less -->
        <nav class="navbar navbar-static-top" role="navigation">            
            <div>
                <!-- Sidebar toggle button-->
                <a href="#" class="navbar-btn sidebar-toggle" data-toggle="offcanvas" role="button">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </a>
            </div>
            <div class="navbar-right">
                <ul class="nav navbar-nav">
                    <!-- User Account: style can be found in dropdown.less -->
                    @Html.Partial("_LoginPartial")
                </ul>
            </div>
            <div class="navbar-right">
                <ul class="nav navbar-nav">
                    <li>
                        <a href="@Url.Action("ItemSelector", "Search",
                            new { type = PomodoroContainerType.Action, target = ItemSelectorTarget.Navigate })" class="cbox select top-nav-button">
                            <span class="fa-stack fa-lg">
                                <i class="fa fa-circle fa-stack-2x text-danger"></i>
                                <i class="fa fa-search fa-stack-1x"></i>
                            </span>
                        </a>
                    </li>
                    <li>
                        <a href="/CollectedThing/CreateLight" class="cbox collect top-nav-button">
                            <span class=" fa-stack fa-lg">
                                <i class="fa fa-circle fa-stack-2x text-danger"></i>
                                <i class="fa fa-plus fa-stack-1x"></i>
                            </span>
                        </a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <div class="wrapper row-offcanvas row-offcanvas-left">
        <!-- Left side column. contains the logo and sidebar -->
        <aside class="left-side sidebar-offcanvas">
            <!-- sidebar: style can be found in sidebar.less -->
            <section class="sidebar">
                <!-- Sidebar user panel -->
                <div id="working-panel" class="user-panel partial-content" data-url="/Work/Working">
                    @*@Html.Action("Working", "Work")*@                    
                </div>
                <!-- search form -->
                @using (Html.BeginForm(null, null, FormMethod.Get, new { id = "search", action="/Search/Index", role="Search", @class="sidebar-form"}))
                {
                <div>
                    <div class="input-group">
                        <input type="text" id="search_term" name="term" class="form-control" placeholder="Search..." />
                        <span class="input-group-btn">
                            <button type='submit' id='search-btn' class="btn btn-flat"><i class="fa fa-search"></i></button>
                        </span>
                    </div>
                </div>
                }
                <!-- /.search form -->
                @{
                    ViewBag.Title = ViewBag.Title ?? string.Empty;
                    MenuSettings activeMenu = MenuSettings.ActiveMenuSettings(ViewBag.Title);
                }
                <!-- sidebar menu: : style can be found in sidebar.less -->
                @Html.Partial("~/Views/Shared/_Menu.cshtml")
            </section>
            <!-- /.sidebar -->
        </aside>
        <!-- Right side column. Contains the navbar and content of the page -->
        <aside class="right-side">
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <h1>
                    <i class="fa fa-fw @(activeMenu.IconCssClass)"></i>
                    
                    @if (string.IsNullOrWhiteSpace(ViewBag.ItemDesc) == false)
                    {
                        @ViewBag.ItemDesc <small>@ViewBag.Title</small>
                    }
                    else
                    {
                        @ViewBag.Title
                    }
                </h1>
                <ol class="breadcrumb">
                    @{
                        if (string.IsNullOrWhiteSpace(activeMenu.ActionName) == false)
                        { 
                            <li><a href="/@(activeMenu.ActionName)"><i class="fa @(activeMenu.IconCssClass)"></i> @(activeMenu.LinkText)</a></li>
                        }
                        if(ViewBag.BreadcrumbList != null)
                        {
                            foreach (string link in ((IEnumerable<string>)ViewBag.BreadcrumbList))
                            {
                                <li>@Html.Raw(link)</li>;
                            }
                            
                        }
                    }
                </ol>
            </section>
            <!-- Main content -->
            <section class="content">                
                @if (TempData["UpdateInfo"] != null)
                {
                    <div class="alert alert-success alert-dismissable">
                        <i class="fa fa-check"></i>
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                        <b>Done!</b> @TempData["UpdateInfo"].ToString()
                    </div>
                    TempData["UpdateInfo"] = null;
                }
                @if (TempData["UpdateError"] != null)
                {
                    <div class="alert alert-warning alert-dismissable">
                        <i class="fa fa-exclamation-triangle"></i>
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                        <b>Warning!</b> @TempData["UpdateError"].ToString()
                    </div>
                    TempData["UpdateError"] = null;
                }
                @RenderBody()
            </section>
        </aside><!-- /.right-side -->
        <footer>
            <div class="container text-center">
                <div class="row">
                    <p>
                        <a href="http://gustavoquevedo.com" title="Gustavo Quevedo's website" target="_blank">Copyright &copy; Gustavo Quevedo 2014. All Rights Reserved</a>&nbsp;&nbsp;|&nbsp;&nbsp;
                        <a href="http://gustavoquevedo.com/en/contact.php" title="Send feeback" target="_blank">Send feedback</a>
                    </p>
                </div>
            </div>
        </footer>
    </div><!-- ./wrapper -->    
    @RenderSection("scripts", required: false)
