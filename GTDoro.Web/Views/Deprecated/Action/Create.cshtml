@model GTDoro.Core.Models.Action

@{
    ViewBag.Operation = GTDoro.Core.Models.Operation.Create;
    Layout = "~/Views/Shared/Layouts/_WorkspaceLayout.cshtml";
}

<h2>Create</h2>


